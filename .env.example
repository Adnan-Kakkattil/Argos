# PrismTrack Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/prismtrack
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=prismtrack

# JWT Configuration
# Generate a secure secret key for production: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-in-production-use-secrets-token-urlsafe-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
DEBUG=True
API_V1_PREFIX=/api/v1

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000
